<div class="session-section">
  <h2>Log in to Pipper</h2>
  <% if flash[:alert] %> 
  <div class="error-section">
      <%= flash[:alert] %>
  </div>
  <% else %>
    Welcome Back.
  <% end %>
  <%= form_tag(session_path) do %>
    <%= text_field_tag :username, params[:username], placeholder: 'Username', required: true%><br>
    <%= password_field_tag :password, params[:password], placeholder: 'Password', required: true%><br>
    <div id="remember-me">
      <%= check_box_tag :remember_me, 1, params[:remember_me], id: 'remember-box' %>
      <%= label_tag :remember_me %>  
    </div>
    <div id="forgot-password">
      <%= link_to 'Forgot password?', new_password_reset_path %>
    </div>
    </br>
    <%= submit_tag 'Sign in' %>
  <% end %>
</div>