<!DOCTYPE html>
<html>
  <head>
  </head>
  <%= render "navbar"%>
  <body>
    <p id="notice"><%= notice %></p>
    <div class="col-md-3">  
      <h3><%= @user.nickname %></h3>
      @<%= @user.username %><br><br>
      <%= @user.description %><br>
    </div>

    <!-- Showing all pips -->
